// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model UserDetails {
  id        String   @id @default(uuid())
  userId    String   @unique        // logical reference to the user in Dynamo
  phone     String? 
  address   String? 
  city      String?
  country   String?
  zip       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
